snippet row
<div class="row">$0</div>
endsnippet
snippet input 
<input type="$1" ${2:class=""}>
endsnippet
snippet form
<%= form_for @$1 do |f| %>
  <%= f.label :$2 %>:
  <%= f.text_field :$2 %><br />

  <%= f.label :last_name %>:
  <%= f.text_field :last_name %><br />

  <%= f.submit %>
<% end %>
endsnippet

snippet render
<%= render '$0' %>
endsnippet

snippet each
<% ${1:@objects}.each do |event| %>
<% end %>
endsnippet

snippet table
<table>
  <thead>
		<td>
			<strong>${1:Table Title}</strong>
		</td>
	</thead>
  <tbody>
    <% @${2:objects}.each do |event| %>
      <tr>
        <td>${3:data}</td>
      </tr>
    <% end %>
  </tbody>
</table>
endsnippet

snippet p
<p><%= $0 %></p>
endsnippet

