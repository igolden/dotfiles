snippet sign_in
<% if user_signed_in? %>
	<%= link_to "Sign Out", "/users/sign_out", method: :delete %>
<% else %>
	<%= link_to "Sign In", new_user_session_path %>
<% end %>
endsnippet

snippet if
<% if $1 %>
	$0
<% end %>
endsnippet

snippet lt
<%= link_to "$1", $2, ${3:class: ''} %>
endsnippet

snippet img
<img src="<%= $0 %>">
endsnippet
snippet pack
<%= javascript_pack_tag '${1:hello_react}' %>
endsnippet

snippet div
<div class="$1">$0</div>
endsnippet

snippet show
<p>
	<%= @${1:object}.name %>
</p>
<p>
	<%= @$1.description %>
</p>
